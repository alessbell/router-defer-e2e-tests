{
  "name": "router-defer-e2e-tests",
  "version": "0.1.0",
  "private": false,
  "dependencies": {
    "@apollo/client": "3.9.4",
    "@vitejs/plugin-react": "4.2.1",
    "graphql": "16.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.22.0",
    "vite": "5.0.12"
  },
  "devDependencies": {
    "@testing-library/cypress": "10.0.1",
    "@types/node": "20.11.16",
    "@types/react": "18.2.52",
    "@types/react-dom": "18.2.18",
    "cypress": "13.6.4",
    "eslint-plugin-cypress": "2.15.1",
    "start-server-and-test": "2.0.3",
    "typescript": "5.3.3",
    "web-vitals": "3.5.2"
  },
  "scripts": {
    "cy:run": "cypress run",
    "cy:run-local": "cypress open",
    "test": "start-server-and-test start http://localhost:3000 cy:run",
    "test:local": "start-server-and-test start http://localhost:3000 cy:run-local",
    "start": "vite",
    "build": "vite build",
    "router:up": "cd ../scripts && make docker-build-local-router && make docker-up-local-router && cd ../CRA-demo",
    "router:down": "cd ../scripts && make docker-compose-down && cd ../CRA-demo",
    "router:restart": "npm run router:down && npm run router:up"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:cypress/recommended"
    ],
    "rules": {
      "cypress/no-unnecessary-waiting": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
